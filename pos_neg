#include <iostream>
using namespace std;

int main() {

    int num;
    cout<<"Enter a number: ";
    cin>>num;
    if (num <= 0) {
        if (num == 0)
            printf("You entered 0.");
        else 
            printf("You entered a negative number.");
    } 
    else
        printf("You entered a positive number.");

    return 0;
}
